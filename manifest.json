{
    "manifest_version": 2,
    "name": "landsoflords community extension",
    "version": "0.1.3",

    "applications":
    {
        "gecko":
        {
            "id": "lol4-plugin@git",
            "strict_min_version": "52.0",
            "update_url": "http://plugin.lol.meewan.fr/download/plugin/update.json"
        }
    },

    "description": "add multiple UI improvements for landsoflords",

    "permissions":
    [
        "*://*.landsoflords.com/*",
        "storage"
    ],

    "content_scripts": 
    [
        {
            "matches": ["*://*.landsoflords.com/*"],
            "js": ["utils.js", "custom_game.js", "content.js"]
        }
    ],

    "options_ui": 
    {
        "page": "config/config.html"
    }

}